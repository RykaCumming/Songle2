<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.V21.Theme.AppCompat.Dialog"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.ac.ed.inf.songle2.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/button"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="284dp"
        android:onClick="sendMessage"
        android:text="Start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/luckiest_guy"
        android:gravity="center"
        android:text="SONGLE"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHighlight="?android:attr/colorPressedHighlight"
        android:textColorHint="@android:color/holo_orange_dark"
        android:textColorLink="@android:color/holo_orange_dark"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="@font/luckiest_guy"
        tools:textSize="36sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="352dp"
        android:onClick="HowToPlayMessage"
        android:text="HOW TO PLAY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="424dp"
        android:onClick="SettingsMessage"
        android:text="OPTIONS"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
